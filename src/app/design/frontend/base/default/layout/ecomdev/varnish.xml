<layout>
    <default>
        <reference name="head">
            <action method="addJs"><file>ecomdev/varnish.js</file></action>
        </reference>
        <reference name="after_body_start">
            <block type="core/template" 
                   template="ecomdev/varnish/js/top.phtml" 
                   name="varnish.top.js" />
        </reference>
        <reference name="before_body_end">
            <block type="core/template"
                   template="ecomdev/varnish/js/bottom.phtml"
                   name="varnish.bottom.js"/>
            <block type="ecomdev_varnish/js_token"
                   template="ecomdev/varnish/js/token.phtml"
                   name="varnish.token.js"/>
        </reference>
    </default>
</layout>
